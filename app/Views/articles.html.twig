{% extends "layout.html.twig" %}

{% block content %}

    <h2>Hottest news:</h2>
    <div class="column">
        {% for article in articles %}
            <article class="article" id="{{ article.getId }}" >
                <div class="container">
                    <div class="title">
                        <h2>{{ article.getTitle }}</h2>
                    </div>
                    <div class="article-structure">
                        <div class="image">
                            <img src="{{ article.getImage }}" alt="">
                        </div>
                        <div class="text">
                            <span>{{ article.getCreatedAt }}</span>
                            <a href="/article/{{ article.getId }}">Read more...</a>
                        </div>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>

{% endblock %}