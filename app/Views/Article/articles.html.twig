{% extends "layout.html.twig" %}

{% block content %}
    <div class="text-center py-2">
        <h2 class="text-2xl font-bold text-gray-300">Hottest news:</h2>
    </div>

    <div class="column">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 pl-4">
        {% for article in articles %}
            <div
                    class="flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]
                    dark:bg-neutral-700 md:max-w-xl md:flex-row">
                <img
                        class="h-96 w-full rounded-t-lg object-cover md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
                        src="{{ article.getImage }}"
                        alt="" />
                <div class="flex flex-col justify-start p-6">
                    <h5
                            class="mb-2 text-xl font-medium text-neutral-800 dark:text-neutral-50">
                        {{ article.getTitle }}
                    </h5>
                    <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
                        {{ article.getSnippet }}<a href="/article/{{ article.getId }}">Read more</a>
                    </p>
                    <p class="text-xs text-neutral-500 dark:text-neutral-300">
                        {{ article.getCreatedAt }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
    <h2> .</h2>

{% endblock %}